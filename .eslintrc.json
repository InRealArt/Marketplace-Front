{
  "extends": [
    "next",
    "next/core-web-vitals",
    "eslint:recommended",
    "react-app"
  ],
  "globals": {
    "React": "readonly"
  },
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "no-undef": "off",
    "no-eval": "off",
    "no-case-declarations": "off",
    "react/no-unescaped-entities": "off"
  },
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "rules": {
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "off"
      }
    }
  ]
}